= stylesheet_link_tag   'users/edit', media: 'all', 'data-turbolinks-track': 'reload'

= render 'shared/header'
.users-edit
  .container
    .form.users-form
      .form-body
        .users-new-title
          %p プロフィール編集
        = form_with model: @user, local: true do |f|
          %input{name: "utf8", type: "hidden", value: "✓"}
          %input{name: "_method", type: "hidden", value: "patch"}
          %input{name: "authenticity_token", type: "hidden", value: "e7jH119v0juYz4ykHMMfhj6uAM4dhFORmHa1D6DEqP8jZe3nBeY+e+U97m4jJ8WLI1BbiObc8NQSJk7IeqYzFA=="}
          %p ユーザー名
          = f.text_field :name
          %p 画像
          = f.file_field :icon
          %p メールアドレス
          = f.text_field :email
          .conform
            %input{type: "submit", value: "保存"}
