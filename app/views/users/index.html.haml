= stylesheet_link_tag    'users/index', media: 'all', 'data-turbolinks-track': 'reload'

=render 'shared/header'

.main__users-all
  .main__users-all-container
    %h1.users-heading
    .posts-index-top
      =form_for('/users', method: "get", class: "form_user") do
        %input{type: "hidden", value: "✓"}
        %p.users-search
          %input{type: "text", name: "keyword", id: "search", class: "search-form", placeholder: "ユーザー検索"}
          %button.btn.btn-success{type: "submit", id: "submit"}  
            %i.fa.fa-search
            検索
    -@user.each do |user|
      .users-all-items
        .user-left
          = link_to "name", "/user/#{user.id}", class:"users-items-box"
          - if user.icon == nil
            = image_tag "/images/default_user.png", alt: '', height: '', width: '', class: 'user-left-img'
          -else
            .user-left-img
              = user.icon
        .user-right
          = user.name
