= stylesheet_link_tag    'users/new', media: 'all', 'data-turbolinks-track': 'reload'

.wrapper
  .container
    %h2
      メール・パスワード
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .field
        = f.label :現在のパスワード
        %br/
        = f.password_field :current_password, autocomplete: "current-password", class: "input"
      .field
        = f.label :新パスワード
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "input"
      .field
        = f.label :新パスワード（確認）
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input"
      .actions
        = f.submit "変更する", class: "button"
      .image_recipe
      = link_to image_tag("/images/my_recipe.png"),root_path
    
