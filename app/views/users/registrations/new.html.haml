= stylesheet_link_tag    'users/new', media: 'all', 'data-turbolinks-track': 'reload'

.wrapper
  .container
    %h2 新規会員登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :name
        %br/
        = f.text_field :name, autofocus: true, autocomplete: "name", class: "input"
      .field
        = f.label :email
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class: "input"
      .field
        = f.label :パスワード
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} 文字以上でよろしく)
        %br/
        = f.password_field :password, autocomplete: "new-password", class: "input"
      .field
        = f.label :パスワード
        %em
          (確認)
        %br/
        = f.password_field :password_confirmation, autocomplete: "new-password", class: "input"
      .actions
        = f.submit "登録する",class: "button"
    = render "users/shared/links"
    .image_recipe
    = link_to image_tag("/images/my_recipe.png"),root_path
    
