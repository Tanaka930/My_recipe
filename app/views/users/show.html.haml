= render 'shared/header'

.main__user-content
  .user-container
    .user
      =image_tag "/images/default_user.png", class: "user-img"
      %h10.user-name
        = @user.name
      .show-link-btn
      - if current_user.id == @user.id
        %p.recipe-button
          =link_to 'レシピ作成', '/recipes/new', class: 'show-link-btn-recipe'
        %p
          =link_to 'プロフィール変更', edit_user_path, class: 'show-link-btn-recipe'
        %p
          =link_to 'ログアウト', '/logout', class: 'show-link-btn-recipe'
      - else
    %ul.user-tabs
      %li.active
        =link_to 'Myレシピ',''
    .posts-index-photo
    - @recipe.each do |recipe|
      .post-photo
        =link_to "/recipes/#{recipe.id}" do
          = image_tag "#{recipe.image}" 
        .post-title-inimage
          =recipe.name
= render 'shared/footer'