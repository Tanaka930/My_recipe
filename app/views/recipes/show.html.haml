= render 'shared/header'

.container
  .post-show-img
    .post-time
      %span
      = @recipe.created_at.strftime("%Y/%m/%d %H:%M")
      %p
        = fa_icon "bullhorn"
        = @recipe.category
        = fa_icon "clock-o"
        =@recipe.time
    .post-show-user-name
      %img{:src => "https://my-meal.s3.amazonaws.com/uploads/user/image_name/182/thumb_185dbcd2-d02f-4879-990f-a7af9fa16ebb.jpeg"}/
      = @recipe.user.name 
    %div
      .posts-show-title
        %h4 
          =@recipe.name
    .post-image
      = image_tag "#{@recipe.image}", class: 'post-image'
    .comment-menus
      %a{:href => "/posts/102/comment"} コメントする
    .post-menus
      %a{:href => "/posts/102/edit"} 編集
      %a{"data-confirm" => "削除しますか？", "data-method" => "post", :href => "/posts/102/destroy", :rel => "nofollow"} 削除
    .posts-show-item
      %p #{@recipe.user.name}：#{@recipe.text}
      .posts-show-subtitle
        %p 材料・調味料(#{@recipe.person})
      %p 材料：#{@recipe.material}
      %hr.border-top/
      %p 調味料：#{@recipe.seasoning}
      .posts-show-subtitle
        %p 作り方
      = succeed "#{@recipe.content1}" do
        %span 1.
      %br/
      %hr/
      = succeed "#{@recipe.content2}" do
        %span 2.
      %br/
      %hr/
      = succeed "#{@recipe.content3}" do
        %span 3.
      %br/
      %hr/
      = succeed "#{@recipe.content4}" do
        %span 4.
      %br
      %hr/
      %p
