= render 'shared/header'

.recipe__container
  %main.container{role: "main"}
    %h1.recipes-heading
    .posts-index-top
      %form{action: "recipes", "accept-charset": "UTF-8", method: "get", class: "form_recipe"}
        %input{ name: "utf8", type: "hidden", value: "✓"}
        %p.recipes-search
          %input{type: "text", name: "search", id: "search", class: "search-form", placeholder: "レシピ検索"}
          %button.btn.btn-success{name: "button", type: "submit"}  
            %i.fa.fa-search
            検索
    - @recipe.each do |recipe|
      .card{:style => "width: 100%;"}
        %img.card-img-top{alt: "...", :src => "#{recipe.image}"}
        .card-body
          %h5.card-title 
            = recipe.name
          %p.card-text 
            = recipe.text
        %ul.list-group.list-group-flush
          %li.list-group-item 
            =recipe.time
          %li.list-group-item
            =recipe.category
          %li.list-group-item
            =recipe.person
        .card-body
          %li.card-link
            = recipe.material
          %li.card-link
            =recipe.seasoning




= render 'shared/footer'