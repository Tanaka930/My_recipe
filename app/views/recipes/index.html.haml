= render 'shared/header'

.recipe__container
  %main.container{role: "main"}
    %h1.recipes-heading
    .posts-index-top
      =form_for('/recipes', method: "get", class: "form_recipe") do
        %input{type: "hidden", value: "✓"}
        %p.recipes-search
          %input{type: "text", name: "keyword", id: "search", class: "search-form", placeholder: "キーワードで検索"}
          %button.btn.btn-success{type: "submit", id: "submit"}  
            %i.fa.fa-search
            検索
    - @recipes.each do |recipe|
      .card{style: "width: 100%;"}
      =link_to "recipes/#{recipe.id}" do
        %img.card-img-top{alt: "...", src: "#{recipe.image}"}
        .card-body
          %h5.card-title 
            = recipe.name
          %p.card-text 
            = recipe.text
        %ul.list-group.list-group-flush
          %li.list-group-item 
            = recipe.time
          %li.list-group-item
            = recipe.category
          %li.list-group-item
            = recipe.person
        .card-body
          %li.card-list
            = recipe.material
          %li.card-list
            = recipe.seasoning

= render 'shared/footer'